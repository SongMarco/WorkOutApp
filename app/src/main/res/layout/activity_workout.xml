<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="nova.workoutapp22.WorkoutActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonAddWO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:onClick="onClick"
            android:text="나만의 운동 만들기" />

        <Button
            android:id="@+id/buttonWoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="단일/다중" />

        <Button
            android:id="@+id/buttonWoSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="전체선택" />

        <Button
            android:id="@+id/buttonWoCancelSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선택해제" />

        <Button
            android:id="@+id/buttonWoDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewForWorkout"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_weight="0.76"
        android:choiceMode="singleChoice" />

</LinearLayout>
